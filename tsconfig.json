{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "server.ts", "server/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
